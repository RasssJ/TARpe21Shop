@model TARpe21ShopVaitmaa.Models.OpenWeather.CityResultViewModel

<h1>Weather in your location:</h1>

<div class="container">
    <dl class="row">

        <div class="form-group row">
            <label asp-for="City" class="col-sm-2 col-form-label"><label>City:</label></label>
            @Html.DisplayFor(model => model.City)
        </div>
        <div class="form-group row">
            <label asp-for="Timezone" class="col-sm-2 col-form-label"><label>Timezone:</label></label>
            @Html.DisplayFor(model => model.Timezone)
        </div>
        <div class="form-group row">
            <label asp-for="Temperature" class="col-sm-2 col-form-label"><label>Outside temp:</label></label>
            @Html.DisplayFor(model => model.Temperature)
        </div>
        <div class="form-group row">
            <label asp-for="Feels_like" class="col-sm-2 col-form-label"><label>Feels like:</label></label>
            @Html.DisplayFor(model => model.Feels_like)
        </div>
        <div class="form-group row">
            <label asp-for="Pressure" class="col-sm-2 col-form-label"><label>Atmosphere: (Pressure)</label></label>
            @Html.DisplayFor(model => model.Pressure)
        </div>
        <div class="form-group row">
            <label asp-for="Humidity" class="col-sm-2 col-form-label"><label>Humidity:</label></label>
            @Html.DisplayFor(model => model.Humidity)
        </div>
        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"><label>Sky:</label></label>
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="form-group row">
            <label asp-for="Speed" class="col-sm-2 col-form-label"><label>Windspeed:</label></label>
            @Html.DisplayFor(model => model.Speed)
        </div>
    </dl>
</div>