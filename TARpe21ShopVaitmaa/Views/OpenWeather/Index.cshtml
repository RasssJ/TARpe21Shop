@model TARpe21ShopVaitmaa.Models.OpenWeather.SearchCityViewModel

<div class="container">
    <form method="post">
        <div class="form-group col-md-offset-5 col-md-5">
            <label asp-for="CityName" style="font-family: Arial"><label>Search for your city:</label></label>
            <input asp-for="CityName" class="form-control" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>
        <div class="container">
            <div class="form-group col-md-offset-3 col-md-5">
                <button asp-controller="OpenWeather" asp-action="SearchCity" class="btn btn-primary">SEARCH!</button>
            </div>
        </div>
    </form>
</div>