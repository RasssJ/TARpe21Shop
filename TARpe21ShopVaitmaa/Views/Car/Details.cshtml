@model TARpe21ShopVaitmaa.Models.Car.CarDetailsViewModel
<h1>Details</h1>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <div class="form-group-row">
            <label asp-for="Id" class="col-sm-2 col-sm-label"><label>Car ID:</label></label>
            @Html.DisplayFor(model => model.Id)
        </div>
        <div class="form-group-row">
            <label asp-for="Manufacturer" class="col-sm-2 col-sm-label"><label>Manufacturer:</label></label>
            @Html.DisplayFor(model => model.Manufacturer)
        </div>
        <div class="form-group-row">
            <label asp-for="Year" class="col-sm-2 col-sm-label"><label>Manufacturing date:</label></label>
            @Html.DisplayFor(model => model.Year)
        </div>
        <div class="form-group-row">
            <label asp-for="PriceOfVehicle" class="col-sm-2 col-sm-label"><label>Vehicle price: (€)</label></label>
            @Html.DisplayFor(model => model.PriceOfVehicle)
        </div>
        <div class="form-group-row">
            <label asp-for="Transmission" class="col-sm-2 col-sm-label"><label>Transmission type:</label></label>
            @Html.DisplayFor(model => model.Transmission)
        </div>
        <div class="form-group-row">
            <label asp-for="MaxKMH" class="col-sm-2 col-sm-label"><label>Max speed achieveable:</label></label>
            @Html.DisplayFor(model => model.MaxKMH)
        </div>
        <div class="form-group-row">
            <label asp-for="Weight" class="col-sm-2 col-sm-label"><label>Weight of the car:</label></label>
            @Html.DisplayFor(model => model.Weight)
        </div>
        <div class="form-group-row">
            <label asp-for="BodyType" class="col-sm-2 col-sm-label"><label>Body type:</label></label>
            @Html.DisplayFor(model => model.BodyType)
        </div>

        @foreach (var images in Model.FileToApiViewModels)
        {
            <partial name="_Images" model="images" />
        }
    </dl>
    <a asp-action="Index" asp-controller="Car" class="btn btn-primary">Back</a>
</div>
